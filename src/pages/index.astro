---
import "../styles/global.css";

import ScrollingContainer from "../components/ScrollingContainer.astro";

import { cardContent } from "../data/card-content.js";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Scrolling Container</title>
  </head>
  <body>
    <main>
      <section class="full">
        <header>
          <h2>Financial Projections</h2>
          <p>
            Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor
            incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud
            exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.
          </p>
        </header>

        <ScrollingContainer cardContent={cardContent} />
      </section>
    </main>
  </body>
</html>

<style>
  :root {
    --content-width: 50rem;
  }
  main {
    padding-block: 4rem;
    display: grid;
    grid-template-columns:
      [full-start]
      1fr
      [content]
      minmax(0, var(--content-width))
      1fr
      [full-end];
    column-gap: 1rem;

    > * {
      grid-column: content;
    }
  }

  section {
    grid-column: 1 / -1;
    display: grid;
    grid-template-columns: inherit;
    &* {
      grid-column: 1/-1;
    }
  }

  .scroller {
    padding-inline: max(1rem, 50% - 1200px / 2);
  }

  h2,
  h3 {
    all: revert;
    color: #181818;
    margin-block: 0 0.625rem;
    line-height: 1.125;
  }

  h2 {
    font-size: 2.8125rem;
  }

  header {
    color: #595566;
  }
  p {
    max-inline-size: 67ch;
  }
</style>
