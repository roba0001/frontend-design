---
const { cardContent } = Astro.props;
---

<ul role="list" class="full">
  {
    cardContent.map((card) => (
      <li>
        <h3>{card.title}</h3>
        <p>{card.body}</p>
      </li>
    ))
  }
</ul>

<style>
  ul {
    display: flex;
    gap: 1rem;
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    grid-column: full;
    padding-inline: max(1rem, 50% - var(--content-width) / 2);
    padding-block-end: 1rem;
    display: flex;
    gap: 1rem;
    overflow-x: auto;
  }
  li {
    flex-basis: min(400px, 90%);
    flex-shrink: 0;
    background: #ebebeb;
    color: #595566;
    border-radius: 8px;
    font-size: 1rem;
    padding: 2.75rem 2.1875rem;
    align-self: start;
    list-style: none;
  }
  h3 {
    font-weight: 700;
    font-size: 1.5625rem;
  }

  .full {
    grid-column: full;
    display: grid;
    grid-template-columns: inherit;
    row-gap: 3rem;

    > * {
      grid-column: content;
    }

    > ul {
      scroll-snap-type: x mandatory;
      grid-column: full;
      padding-inline: max(1rem, 50% - var(--content-width) / 2);
      padding-block-end: 1rem;

      li {
        scroll-snap-align: center;
      }
    }
  }
</style>
